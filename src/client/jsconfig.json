{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "strictFunctionTypes": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "jsx": "preserve"
    }
}